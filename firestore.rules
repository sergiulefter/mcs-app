rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.isAdmin == true;
    }

    // Users collection - users can only read/write their own data
    // Admins can also create/update user docs when onboarding doctors
    match /users/{userId} {
      // Allow read if authenticated and accessing own document, or if admin
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());

      // Allow create during signup (own document) or by admin (onboarding doctors)
      allow create: if isAuthenticated() && (isOwner(userId) || isAdmin());

      // Allow update only if user owns the document or is admin
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());

      // Prevent deletion for now (can be enabled later if needed)
      allow delete: if false;
    }

    // Doctors collection - read for all authenticated users, write for admins or self
    match /doctors/{doctorId} {
      // Any authenticated user can read doctor profiles (patients need to browse doctors)
      allow read: if isAuthenticated();

      // Only admins can create or delete doctor profiles
      allow create: if isAdmin();
      allow delete: if isAdmin();

      // Admins or the doctor themselves can update their profile
      allow update: if isAdmin() || isOwner(doctorId);
    }

    // Consultations collection - patients access their own; admins full access (seeding, management)
    match /consultations/{consultationId} {
      function isOwnerOfNew() {
        return isAuthenticated() &&
               request.resource.data.patientId == request.auth.uid;
      }

      function isOwnerExisting() {
        return isAuthenticated() &&
               resource.data.patientId == request.auth.uid;
      }

      allow create: if isOwnerOfNew() || isAdmin();
      allow read: if isOwnerExisting() || isAdmin();
      allow update: if isOwnerExisting() || isAdmin();
      allow delete: if isOwnerExisting() || isAdmin();
    }

    // Default rule: deny all access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
