rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.isAdmin == true;
    }

    // Helper function to check if authenticated user is a doctor (exists in doctors collection)
    function isDoctorAccount() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/doctors/$(request.auth.uid));
    }

    // Users collection - users can only read/write their own data
    // Admins can also create/update user docs when onboarding doctors
    match /users/{userId} {
      // Allow read if authenticated and accessing own document, or if admin
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());

      // Allow create during signup (own document) or by admin (onboarding doctors)
      allow create: if isAuthenticated() && (isOwner(userId) || isAdmin());

      // Allow update only if user owns the document or is admin
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());

      // Prevent deletion for now (can be enabled later if needed)
      allow delete: if false;
    }

    // Doctors collection - read for all authenticated users, write for admins or self
    match /doctors/{doctorId} {
      // Any authenticated user can read doctor profiles (patients need to browse doctors)
      allow read: if isAuthenticated();

      // Only admins can create or delete doctor profiles
      allow create: if isAdmin();
      allow delete: if isAdmin();

      // Admins or the doctor themselves can update their profile
      allow update: if isAdmin() || isOwner(doctorId);
    }

    // Consultations collection - patients access their own; admins full access (seeding, management)
    match /consultations/{consultationId} {
      function isOwnerOfNew() {
        return isAuthenticated() &&
               request.resource.data.patientId == request.auth.uid;
      }

      function isOwnerExisting() {
        return isAuthenticated() &&
               resource.data.patientId == request.auth.uid;
      }

      function isAssignedDoctorExisting() {
        return isDoctorAccount() &&
               resource.data.doctorId != null &&
               resource.data.doctorId == request.auth.uid;
      }

      function doctorUpdateAllowed() {
        return isAssignedDoctorExisting() &&
               request.resource.data.patientId == resource.data.patientId &&
               request.resource.data.doctorId == resource.data.doctorId &&
               request.resource.data.createdAt == resource.data.createdAt &&
               request.resource.data.termsAcceptedAt == resource.data.termsAcceptedAt &&
               request.resource.data.title == resource.data.title &&
               request.resource.data.description == resource.data.description &&
               request.resource.data.urgency == resource.data.urgency &&
               request.resource.data.attachments == resource.data.attachments &&
               request.resource.data
                   .diff(resource.data)
                   .changedKeys()
                   .hasOnly(['status', 'updatedAt', 'completedAt', 'doctorResponse', 'infoRequests']);
      }

      allow create: if isOwnerOfNew() || isAdmin();
      allow read: if isOwnerExisting() || isAssignedDoctorExisting() || isAdmin();
      allow update: if isOwnerExisting() || isAdmin() || doctorUpdateAllowed();
      allow delete: if isOwnerExisting() || isAdmin();
    }

    // Default rule: deny all access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
